{% extends "BookshopBookshopBundle::dashboardLayout.html.twig" %}
{% block fos_user_content %}
<div class="account-create">
    <div class="page-title">
        <h1>{{ 'address.show.title.billing'|trans({}, 'BookshopBundle') }}</h1>
    </div>
        
    <form action="{{ path('fos_user_profile_edit') }}" method="POST" id="form-validate" class="fos_user_profile_edit">
    
        <div class="fieldset">
            <h2 class="legend">{{ 'address.edit.title.billing'|trans({}, 'BookshopBundle') }}</h2>
            <ul class="form-list">
                <li class="fields">
                    <div class="customer-name">
                        <div class="field name-firstname">
                            <label for="firstname" class="required"><em>*</em>{{ 'address.show.first_name'|trans({},'BookshopBundle') }}</label>
                            <div class="input-box">
                                <input type="text" id="firstname" name="firstname" value="{{ billing_address.firstName }}" title="{{ 'address.show.first_name'|trans({},'BookshopBundle') }}" maxlength="255" class="input-text required-entry" disabled/>
                            </div>
                        </div>
                        <div class="field name-lastname">
                            <label for="lastname" class="required"><em>*</em>{{ 'address.show.last_name'|trans({},'BookshopBundle') }}</label>
                            <div class="input-box">
                                <input type="text" id="lastname" name="firstname" value="{{ billing_address.lastName }}" title="{{ 'address.show.last_name'|trans({},'BookshopBundle') }}" maxlength="255" class="input-text required-entry" disabled/>
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="field">
                        <label for="email_address" class="required"><em>*</em>{{ 'address.show.email'|trans({},'BookshopBundle') }}</label>
                        <div class="input-box">
                            <input type="text" id="email_address" name="firstname" value="{{ billing_address.email }}" title="{{ 'address.show.email'|trans({},'BookshopBundle') }}" maxlength="255" class="input-text required-entry" disabled/>
                        </div>
                    </div>
                    <div class="field">

                        <label for="address">{{ 'address.show.address'|trans({},'BookshopBundle') }}</label>
                        <div class="input-box">
                            <input type="text" id="email_address" name="address" value="{{ billing_address.address }}" title="{{ 'address.show.adderss'|trans({},'BookshopBundle') }}" maxlength="255" class="input-text required-entry" disabled/>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="field">
                        <label for="city" class="required"><em>*</em>{{ 'address.show.city'|trans({},'BookshopBundle') }}</label>
                        <div class="input-box">
                            <input type="text" id="email_address" name="city" value="{{ billing_address.city }}" title="{{ 'address.show.city'|trans({},'BookshopBundle') }}" maxlength="255" class="input-text required-entry" disabled/>
                        </div>
                    </div>
                    <div class="field">

                        <label for="country">{{ 'address.show.country'|trans({},'BookshopBundle') }}</label>
                        <div class="input-box">
                            <input type="text" id="email_address" name="country" value="{{ billing_address.country }}" title="{{ 'address.show.country'|trans({},'BookshopBundle') }}" maxlength="255" class="input-text required-entry" disabled/>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        

        <div class="buttons-set">
            <p class="required">* Required Fields</p>
            {% if not app.request.server.get('HTTP_REFERER') is null %}
                <p class="back-link"><a href="{{app.request.server.get('HTTP_REFERER') }}" class="back-link"><small>&laquo; </small>Back</a></p>
            {% endif %}

            <div>
                <a href="{{ path('dashboard_billing_addr_new_edit') }}">
                    <button type="button" title="{{ 'address.edit.label'|trans({}, 'BookshopBundle') }}" class="button">
                        <span><span>{{ 'address.edit.label'|trans({}, 'BookshopBundle') }}</span></span>
                    </button>
                </a>
            </div>
        </div>
    </form>
</div>
{% endblock %}